<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_horizontal"
    android:orientation="vertical"
	android:background="@drawable/rs_background" >

    <!-- WELCOME BOX -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
         	        
			  android:shadowColor="#000000"
			  android:shadowDx="5"
			  android:shadowDy="5"
			  android:shadowRadius="10"
			  
			 >
        
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pt_activity_label_welcome"
            android:textSize="28sp" 
		
			android:textColor="#FFFFFF" 

			  android:shadowColor="#BEBEBE"
			  android:shadowDx="1"
			  android:shadowDy="1.5"
			  android:shadowRadius="2"
			/>
        
        <TextView
            android:id="@+id/txtJapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" JAPA"
            android:textSize="25sp" 
            android:textColor="#f81c3b" 
          			
	
			/>
        
        
        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ? "
            android:textSize="25sp" 
            android:textColor="#FFFFFF" 
          			
			  android:shadowColor="#FFFFFF"
			  android:shadowDx="1"
			  android:shadowDy="1.5"
			  android:shadowRadius="2"
			 
			/>
         
        
    </LinearLayout>

    <!-- END WELCOME BOX -->


    <!-- STATE BOX -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left">
            
        
         <TextView
            android:id="@+id/txtChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pt_activity_label_choose_1"
            android:textSize="25sp" 
            android:textColor="#FFFFFF" 
            
          			
			  android:shadowColor="#B22222"
			  android:shadowDx="0"
			  android:shadowDy="0"
			  android:shadowRadius="1"
			 
			/>
         
         
         
         <TextView
            android:id="@+id/txtState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Estado"
            android:textSize="25sp" 
             android:textColor="#f81c3b" 
          			
			  android:shadowColor="#B22222"
			  android:shadowDx="0"
			  android:shadowDy="0"
			  android:shadowRadius="1"
			 
			/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="25sp" 
            android:textColor="#FFFFFF" 
            android:layout_marginBottom="15dp"
          			
			  android:shadowColor="#B22222"
			  android:shadowDx="0"
			  android:shadowDy="0"
			  android:shadowRadius="1"
			 
			/>
         
         
         </LinearLayout>
        
        <ListView
            android:id="@+id/activity_places_state_listView"
            style="@style/listview_transparent"
             >

    	</ListView>
    	</LinearLayout>
    	
    
        
         <!--  IMAGE AD -->
      		 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"          
                android:orientation="horizontal"
          		android:layout_marginTop="15dp"
          		android:layout_marginBottom="15dp"  
				>		                
      		 
						    <ImageView
						                     android:id="@+id/imgAd"
						                     android:layout_width="0dp"
						                     android:layout_height="wrap_content"                     
						                     android:src="@drawable/rs_box_ad"
						                     android:layout_weight="1"
						                     android:layout_gravity="center_horizontal"
						                     android:onClick="onClickAD"
						                     
						                     />
                
            </LinearLayout>
      		 
      		 
        
    



</LinearLayout><!-- From: file:/home/filhofilha/Documents/Projects/japa.com/Japa.com/res/layout/activity_places_state.xml -->